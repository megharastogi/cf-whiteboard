<script type="text/javascript">
bkLib.onDomLoaded(function() {
  new nicEditor({fullPanel : true}).panelInstance('question_title');
});
</script>

<%if !@question.errors.blank? %>
  <div class="alert alert-danger">
    <ul>
      <% @question.errors.full_messages.each do |e|%>
        <li><%= e%></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=form_for(@question) do |f|%>
  <fieldset style="width: 600px;">
    <legend>Edit Question</legend>
    <div class="form-group">
      <%=f.label :user_name, "Your name" %>
      <%=f.text_field :user_name,:class=>"form-control" %>
    </div>
    <div class="form-group">
      <%=f.label :title%>
      <%=f.text_area :title,:class=>"form-control",:style=>"height:150px;"%>
    </div>

    <div class="form-group">
      <%=f.label :company, "Company name"%>
      <%=f.text_field :company,:class=>"form-control"%>
    </div>

     <div class="form-group">
      <%=f.label :job_title %>
      <%=f.text_field :job_title,:class=>"form-control" %>
    </div>
    
    <%= f.submit "Save",:class => "btn"%>
  </fieldset>
<% end%>