<%if !@question.errors.blank? %>
  <div class="alert alert-danger">
    <ul>
      <% @question.errors.full_messages.each do |e|%>
        <li><%= e%></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=form_for(@question) do |f|%>
  <fieldset style="width: 600px;">
    <legend>Create new Question</legend>
    <div class="form-group">
      <%=f.label :user_name, "Your name" %>
      <%=f.text_field :user_name ,:class=>"form-control"%>
    </div>
    <div class="form-group">
      <%=f.label :title,"Question"%>
      <%=f.text_area :title,:class=>"form-control",:style=>"height:150px;"%>
    </div>

    <div class="form-group">
      <%=f.label :company, "Company name"%>
      <%=f.text_field :company,:class=>"form-control"%>
    </div>

     <div class="form-group">
      <%=f.label :job_title %>
      <%=f.text_field :job_title,:class=>"form-control" %>
    </div>
    
    <%= f.fields_for :comment do |ff| %>
      <div class="form-group">
        <%= ff.label :content, "Your Answer" %>
        <%= ff.text_area :content ,:class=>"form-control",:style=>"height:150px;"%>
      </div>
    <% end %>
    <%= f.submit "Save",:class=>"btn"%>
  </fieldset>
<% end%>